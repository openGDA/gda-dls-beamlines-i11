<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.diamond.ac.uk/schema/gda/gda platform:/resource/uk.ac.gda.core/src/gda/spring/namespaces/gda/gda-gda-1.1.xsd">

	<bean id="spin" class="uk.ac.gda.remoting.client.GdaRmiProxyFactoryBean">
		<property name="serviceUrl" value="${gda.rmi.prefix}/spin" />
		<property name="serviceInterface" value="gda.device.ISpin" />
		<property name="refreshStubOnConnectFailure" value="true" />
	</bean>
</beans>
