<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="ispyb_http" class="gda.px.util.ISPyBClientHTTPServer">
        <property name="db_host_name" value="sci-serv3.diamond.ac.uk" />
        <property name="db_port_number" value="1994" />
    </bean>

    <bean id="ispyb" class="gda.px.util.ISPyBTools">
        <property name="ISPyBClientHTTPServer" ref="ispyb_http" />
    </bean>

    <bean id="simpleUDPServerScannable" class="gda.device.scannable.SimpleUDPServerScannable">
    	<property name="prefix" value="ISPYB"/>
    </bean>

    <bean id="gda_ispyb" class="gda.px.util.GDAISpyB">
        <property name="ispyB" ref="ispyb" />
	<property name="externalRecordChangeScannable" ref="simpleUDPServerScannable"/>
    </bean>

</beans>
