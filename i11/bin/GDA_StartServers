#!/bin/bash
`dirname $0`/gda nameserver --stop $@
`dirname $0`/gda logserver --stop $@
`dirname $0`/gda eventserver --stop $@
`dirname $0`/gda objectserver --stop $@

`dirname $0`/gda nameserver $@
`dirname $0`/gda logserver $@
`dirname $0`/gda eventserver $@

if [ -n "$JAVA_OPTS" ] ; then
	export JAVA_OPTS="-Xms128m -Xmx1024m -XX:MaxPermSize=256m -XX:+DisableExplicitGC $JAVA_OPTS"
else
	export JAVA_OPTS="-Xms128m -Xmx1024m -XX:MaxPermSize=256m -XX:+DisableExplicitGC"
fi

`dirname $0`/gda objectserver  --smart --trace --debug -p 8001 --restart -v --mode=live $@
